<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ffaaaaaa" android:endColor="#ffaaaaaa" android:angle="90.0" android:centerColor="#ff000000" />
            <stroke android:width="1.0px" android:color="#ffbfab54" />
            <corners android:topLeftRadius="8.0dip" android:topRightRadius="8.0dip" android:bottomLeftRadius="0.0dip" android:bottomRightRadius="0.0dip" />
            <padding android:left="10.0dip" android:top="10.0dip" android:right="10.0dip" android:bottom="10.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#ffaaaaaa" android:endColor="#ffaaaaaa" android:angle="90.0" android:centerColor="#ff000000" />
            <stroke android:width="1.0px" android:color="#ffbfab54" />
            <corners android:topLeftRadius="8.0dip" android:topRightRadius="8.0dip" android:bottomLeftRadius="0.0dip" android:bottomRightRadius="0.0dip" />
            <padding android:left="10.0dip" android:top="10.0dip" android:right="10.0dip" android:bottom="10.0dip" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item android:left="0.0px" android:top="0.0px" android:right="0.0px" android:bottom="0.0px">
                <shape>
                    <stroke android:width="3.0dip" android:color="#ffbfab54" />
                    <corners android:topLeftRadius="8.0dip" android:topRightRadius="8.0dip" android:bottomLeftRadius="8.0dip" android:bottomRightRadius="8.0dip" />
                </shape>
            </item>
            <item android:left="0.0px" android:top="10.0px" android:right="0.0px" android:bottom="10.0px">
                <shape>
                    <solid android:color="#ff000000" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>